{
  "name": "atlas-paged",
  "version": "0.1.2",
  "type": "module",
  "description": "React components for creating print-ready documents with Paged.js, including development preview system",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "public/print.css",
    "src/fonts.css",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./src/fonts.css",
    "./print.css": "./public/print.css"
  },
  "scripts": {
    "dev": "vite",
    "tsc": "tsc",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --mode lib && tsc --project tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "paged.js",
    "print",
    "pdf",
    "typography",
    "layout",
    "components",
    "preview",
    "development"
  ],
  "author": "Max Schmalenbach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maaaaaaaaaaaaaaaax/atlas"
  },
  "peerDependencies": {
    "pagedjs": "^0.4.3",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.1",
    "@eslint/js": "^9.21.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "pagedjs": "^0.4.3",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
